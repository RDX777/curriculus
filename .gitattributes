# Define terminação de linha padrão para arquivos de texto
* text=auto

# Força terminação LF para arquivos de código
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binários: não altera terminação de linha
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary
*.zip binary
*.exe binary
*.dll binary
*.mp4 binary
*.mp3 binary
